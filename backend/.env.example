# AI 포탈 환경 설정 파일
# 이 파일을 .env로 복사하여 사용

# 기본 설정
PROJECT_NAME="AI Portal"
VERSION="0.1.0"
ENVIRONMENT="development"
DEBUG=true

# API 설정
API_V1_STR="/api/v1"
API_HOST="0.0.0.0"
API_PORT=8000

# CORS 설정
BACKEND_CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://localhost:8000"

# 데이터베이스 설정
DATABASE_URL="postgresql+asyncpg://aiportal:aiportal123@localhost:5432/ai_portal"
REDIS_URL="redis://localhost:6379/0"

# AWS 설정
AWS_ACCESS_KEY_ID=""
AWS_SECRET_ACCESS_KEY=""
AWS_REGION="ap-northeast-2"

# DynamoDB 설정
DYNAMODB_ENDPOINT="http://localhost:8000"
DYNAMODB_TABLE_PREFIX="ai_portal_"

# OpenSearch 설정
OPENSEARCH_URL="http://localhost:9200"
OPENSEARCH_INDEX_PREFIX="ai_portal_"

# LLM API 키
OPENAI_API_KEY=""
ANTHROPIC_API_KEY=""
GOOGLE_API_KEY=""

# 모니터링
LANGSMITH_API_KEY=""
LANGSMITH_PROJECT="ai-portal"

# 보안 설정
SECRET_KEY="your-secret-key-here-change-in-production"
ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=1440

# Mock 인증 설정 (개발용)
MOCK_AUTH_ENABLED=true
MOCK_USER_ID="mock_user_123"
MOCK_USER_EMAIL="user@aiportal.com"
MOCK_USER_NAME="테스트 사용자"

# 파일 업로드 설정
MAX_UPLOAD_SIZE=10485760
ALLOWED_EXTENSIONS=".pdf,.txt,.docx,.png,.jpg,.jpeg"
UPLOAD_DIR="uploads"

# 로깅 설정
LOG_LEVEL="INFO"
LOG_FORMAT="json"